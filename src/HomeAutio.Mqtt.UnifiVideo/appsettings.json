{
  "unifi": {
    "unifiName": "default",
    "unifiHost": "blank",
    "unifiUsername": "blank",
    "unifiPassword": "blank",
    "unifiDisableSslCheck": "true",
    "refreshInterval": 1,
    "detectMotionRefreshInterval": 1
  },
  "mqtt": {
    "brokerIp": "localhost",
    "brokerPort": 1883,
    "brokerUsername": null,
    "brokerPassword": null,
    "brokerUseTls": false
  },
  "Serilog": {
    "Enrich": [ "FromLogContext" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/HomeAutio.Mqtt.UnifiVideo.log",
          "retainedFileCountLimit": 31
        }
      }
    ]
  }
}
